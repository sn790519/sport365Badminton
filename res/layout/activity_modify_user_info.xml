<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/whitesmoke"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="姓名："
                    />

            <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入姓名"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="昵称："
                    />

            <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入昵称"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="性别："
                    />

            <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/base_blue"
                    android:minWidth="@dimen/min_width"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@android:color/white"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="邮箱："
                    />

            <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入邮箱"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="QQ："
                    />

            <EditText
                    android:id="@+id/et_qq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入QQ"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="省份："
                    />

            <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/base_blue"
                    android:minWidth="@dimen/min_width"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@android:color/white"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="城市："
                    />

            <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/base_blue"
                    android:minWidth="@dimen/min_width"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@android:color/white"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="地区："
                    />

            <TextView
                    android:id="@+id/tv_diqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/base_blue"
                    android:minWidth="@dimen/min_width"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@android:color/white"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_list"
                    android:text="密码："
                    />

            <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入新密码"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>

        <Button
                android:layout_marginTop="@dimen/margin_fifteen_dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/base_blue"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                android:layout_marginRight="@dimen/margin_fifteen_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_push"
                android:text="提交"/>
    </LinearLayout>

</ScrollView>
