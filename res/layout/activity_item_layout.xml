<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

    <ImageView
            android:id="@+id/iv_activity_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/indicator_ongoing"/>
    <RelativeLayout
            android:id="@+id/rl_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_toLeftOf="@id/iv_activity_flag"
            android:paddingBottom="10dp"
            android:visibility="visible">
        <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="69元"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_list"/>
        <TextView
                android:id="@+id/tv_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tv_price"
                android:layout_centerVertical="true"
                android:text="独墅湖体育馆羽毛球"
                android:textColor="@color/orangn"
                android:textSize="@dimen/text_size_list"/>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_middle_content"
            android:layout_width="match_parent"
            android:layout_below="@id/rl_top_title"
            android:layout_height="90.0dp">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="0.5dp"
                android:layout_marginTop="0.5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_default_common"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="90.0dp"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/imageView"
                android:gravity="top">
            <ImageView
                    android:id="@+id/iv_tag_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/indicator_common_set_up"/>

            <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_list_time"
                    android:drawablePadding="4.0dip"
                    android:gravity="center_vertical"
                    android:text="10:00 -- 11:00"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/hint"/>

            <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time"
                    android:layout_marginTop="4.0dip"
                    android:drawableLeft="@drawable/icon_list_phone"
                    android:drawablePadding="4.0dip"
                    android:gravity="center_vertical"
                    android:text="0515 86577806"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/hint"/>

            <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_phone"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="4.0dip"
                    android:drawableLeft="@drawable/icon_list_address"
                    android:drawablePadding="4.0dip"
                    android:drawableRight="@drawable/icon_nearby_map"
                    android:gravity="top"
                    android:maxLines="2"
                    android:text="江苏省  苏州市  工业园区  苏州工业园区创意产业园4期"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/hint"/>
        </RelativeLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/imageView"
                android:background="@color/line"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8.0dip"
            android:layout_below="@id/rl_middle_content"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:weightSum="2">

        <TextView
                android:id="@+id/tv_sign_alredy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_have_to_sign_up"
                android:drawablePadding="2.0dip"
                android:gravity="center_vertical"
                android:text="28人已报名"
                android:textColor="@color/hint"
                android:textSize="@dimen/hint"/>

        <TextView
                android:id="@+id/tv_activity_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_activeties_to_sign_up"
                android:drawablePadding="2.0dip"
                android:gravity="center_vertical"
                android:text="活动报名"
                android:textColor="@color/hint"
                android:textSize="@dimen/hint"/>
    </LinearLayout>

</RelativeLayout>