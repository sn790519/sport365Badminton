<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingRight="@dimen/margin_fifteen_dp"
                android:paddingLeft="@dimen/margin_fifteen_dp">


    <ScrollView
            android:id="@+id/sv_flag"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_ten_dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="50dp"
                        android:text="姓名："
                        />
                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_ten_dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机：" android:minWidth="50dp"
                        />
                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_ten_dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱：" android:minWidth="50dp"
                        />
                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_ten_dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ  ：" android:minWidth="50dp"
                        />
                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/ll_pay_money"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_marginTop="@dimen/margin_fifteen_dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_list"
                        android:text="充值金额："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <com.sport365.badminton.view.NoScrollGridView
                        android:id="@+id/gv_money_choose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawSelectorOnTop="true"
                        android:gravity="center"
                        android:horizontalSpacing="@dimen/image_thumbnail_spacing"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="4"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="@dimen/image_thumbnail_spacing">
                </com.sport365.badminton.view.NoScrollGridView>
            </LinearLayout>


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_fifteen_dp"
                    android:background="@color/white">
                <TextView
                        android:layout_marginTop="@dimen/margin_fifteen_dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_list"
                        android:text="付款方式："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RadioGroup
                        android:id="@+id/rg_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingBottom="2dp">

                    <RadioButton
                            android:id="@+id/rb_zfb_pay"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_list"
                            android:drawableLeft="@drawable/icon_list_deal_alipay"
                            android:text="支付宝"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:drawablePadding="10dp"
                            android:checked="true"
                            android:layout_height="wrap_content"/>

                    <RadioButton
                            android:id="@+id/rb_wx_pay"
                            android:layout_marginTop="@dimen/margin_fifteen_dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_list"
                            android:text="微信支付"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/icon_list_deal_weixin"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"/>

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/ll_flag"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_fifteen_dp"
                    android:background="@color/white">
                <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="立即充值"
                        android:textColor="@color/white"
                        android:background="@color/base_blue"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>