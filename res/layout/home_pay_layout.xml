<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/margin_fifteen_dp"
    android:paddingRight="@dimen/margin_fifteen_dp" >

    <ScrollView
        android:id="@+id/sv_flag"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ten_dp"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:text="姓名：" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hint"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:text="18550195586" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ten_dp"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:text="手机：" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hint"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:text="18550195586" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ten_dp"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:text="邮箱：" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hint"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:text="794545236@qq.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ten_dp"
                android:gravity="center_vertical"
                android:minHeight="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:text="QQ  ：" />

                <TextView
                    android:id="@+id/tv_qq"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hint"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:text="794545236" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_fifteen_dp"
                    android:text="充值金额："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_list" />

                <com.sport365.badminton.view.NoScrollGridView
                    android:id="@+id/gv_money_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8.0dp"
                    android:drawSelectorOnTop="true"
                    android:gravity="center"
                    android:listSelector="@android:color/transparent"
                    android:cacheColorHint="@android:color/transparent"
                    android:numColumns="5"
                    android:stretchMode="columnWidth" >
                </com.sport365.badminton.view.NoScrollGridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_fifteen_dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款方式："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_list" />

                <RadioGroup
                    android:id="@+id/rg_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6.0dp"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingBottom="2dp" >

                    <RadioButton
                        android:id="@+id/rb_zfb_pay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:drawableLeft="@drawable/icon_list_deal_alipay"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="支付宝"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_list" />

                    <RadioButton
                        android:id="@+id/rb_wx_pay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_fifteen_dp"
                        android:drawableLeft="@drawable/icon_list_deal_weixin"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="微信支付"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_list" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_fifteen_dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/base_blue"
                    android:text="立即充值"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>