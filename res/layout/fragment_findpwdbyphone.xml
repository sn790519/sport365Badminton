<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/whitesmoke"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/min_hight"
            android:gravity="center_vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="70dp"
                android:textSize="@dimen/text_size_list"
                android:text="手机号"
                />

        <EditText
                android:id="@+id/et_phone"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textSize="@dimen/text_size_list"/>
        <Button
                android:id="@+id/btn_send_code"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/base_blue"
                android:paddingLeft="@dimen/margin_fifteen_dp"
                android:paddingRight="@dimen/margin_fifteen_dp"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"/>
    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/padding_three_dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_line"/>

    <LinearLayout
            android:layout_height="@dimen/min_hight"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="70dp"
                android:text="验证码"
                android:textSize="@dimen/text_size_list"/>

        <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入验证码"
                android:layout_weight="1"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/text_size_list"/>
    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/padding_three_dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_line"/>
    <LinearLayout
            android:layout_height="@dimen/min_hight"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="70dp"
                android:text="新密码"
                android:textSize="@dimen/text_size_list"/>

        <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入新密码"
                android:layout_weight="1"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/text_size_list"/>
    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/padding_three_dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_line"/>
    <LinearLayout
            android:layout_height="@dimen/min_hight"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="70dp"
                android:text="确认密码"
                android:textSize="@dimen/text_size_list"/>

        <EditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请确认新密码"
                android:layout_weight="1"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/text_size_list"/>
    </LinearLayout>
    <View
            android:layout_marginTop="@dimen/padding_three_dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_line"/>

    <Button
            android:layout_marginTop="@dimen/margin_fifteen_dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/base_blue"
            android:layout_marginLeft="@dimen/margin_fifteen_dp"
            android:layout_marginRight="@dimen/margin_fifteen_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset_code"
            android:text="重置密码"/>


</LinearLayout>


