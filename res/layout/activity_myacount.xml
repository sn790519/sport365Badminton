<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/whitesmoke"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_marginTop="@dimen/margin_fifteen_dp"
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_1"
                android:text="会员ID："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_1"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:text="11111"
                android:layout_centerVertical="true"
                android:id="@+id/tv_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_2"
                android:text="账号："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_2"
                android:text="admin"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_user_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <ImageView
                android:id="@+id/iv_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right_more"/>
        <TextView
                android:layout_toLeftOf="@+id/iv_2"
                android:text="@string/modify"
                android:layout_marginRight="@dimen/margin_eight_dp"
                android:textColor="@color/base_blue"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_3"
                android:text="姓名："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_3"
                android:text="admin"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/iv_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right_more"/>
        <TextView
                android:layout_toLeftOf="@+id/iv_3"
                android:text="@string/modify"
                android:layout_marginRight="@dimen/margin_eight_dp"
                android:textColor="@color/base_blue"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="@dimen/margin_fifteen_dp"
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_4"
                android:text="手机号："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_4"
                android:text="13812345678"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/iv_4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right_more"/>
        <TextView
                android:layout_toLeftOf="@+id/iv_4"
                android:text="@string/modify"
                android:layout_marginRight="@dimen/margin_eight_dp"
                android:textColor="@color/base_blue"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_5"
                android:text="登录密码："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_5"
                android:text="******"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_user_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/iv_5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right_more"/>
        <TextView
                android:layout_toLeftOf="@+id/iv_5"
                android:text="@string/modify"
                android:layout_marginRight="@dimen/margin_eight_dp"
                android:textColor="@color/base_blue"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="@dimen/margin_fifteen_dp"
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_6"
                android:text=" 账户余额："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_6"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:text="￥100"
                android:layout_centerVertical="true"
                android:id="@+id/tv_user_acount_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>
    <RelativeLayout
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_7"
                android:text="账号总额："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_7"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:text="￥100"
                android:layout_centerVertical="true"
                android:id="@+id/tv_user_acount_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>
    <RelativeLayout
            android:paddingLeft="@dimen/margin_fifteen_dp"
            android:paddingRight="@dimen/margin_fifteen_dp"
            android:background="@color/white"
            android:minHeight="@dimen/min_hight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_8"
                android:text="消费金额："
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_8"
                android:paddingLeft="@dimen/padding_eight_dp"
                android:text="￥1900"
                android:layout_centerVertical="true"
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>
</LinearLayout>