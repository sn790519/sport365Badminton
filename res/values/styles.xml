<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Messgae Loading box -->
    <style name="MessageLoadingBox">

        <!-- parent="android:style/Theme.Dialog.Alert" -->
        <!-- item name="android:windowBackground">@drawable/message_box_panel</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground"> @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ProgressBar.Loading" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_icon_loop</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
    <!-- Messgae box -->
    <style name="MessageBox">

        <!-- parent="android:style/Theme.Dialog.Alert" -->
        <!-- item name="android:windowBackground">@drawable/message_box_panel</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="centerDialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/scale_dialog_close</item>
    </style>

</resources>